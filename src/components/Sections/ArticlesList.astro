---
import { getCollection } from "astro:content";
import Card from "../UI/Card.astro";
import Button from "../UI/Button.astro";
import { formatDate } from "../../utils/dateUtils";

export interface Props {
  count?: number;
  showViewAll?: boolean;
}

const { count = 3, showViewAll = true } = Astro.props;

// Get sermons sorted by date (newest first)
const allPosts = await getCollection("blog", ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Sort by date (newest first)
const sermons = allPosts
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, count);
---

<section class="py-16 bg-white">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Posts recientes</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Lee lo último que han escrito nuestros expertos
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {sermons.map((article) => (
        <Card
          className="shadow-none"
          title={article.data.title}
          image={{
            src: article.data.image?.url || "/images/article-placeholder.webp",
            alt: article.data.image?.alt || "placeholder"
          }}
          href={`/sermons/${article.slug}`}
        >
          <div class="mb-3 flex items-center text-gray-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <span>{formatDate(article.data.pubDate)}</span>
          </div>
          
          <div class="mb-3 flex items-center text-gray-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span>{article.data.author}</span>
          </div>
          
          
          <p class="text-gray-700 mb-4">{article.data.description}</p>
          
          <a href={`/blog/${article.slug}`} class="text-primary-600 font-medium hover:text-primary-700">
            Leer →
          </a>
        </Card>
      ))}
    </div>
    
    {showViewAll && sermons.length > 0 && (
      <div class="mt-12 text-center">
        <Button href="/blog" variant="outline">
          Todos los Artículos
        </Button>
      </div>
    )}
  </div>
</section>